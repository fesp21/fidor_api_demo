<%= simple_form_for @transfer, url: internal_transfers_path do |f| %>

  <%= f.error_messages %>

  <%= f.input :receiver, input_html: { autofocus: true } %>
  <%= f.input :amount, placeholder: "0.00", input_html: { data: { vm_mask_money: true } } %>
  <%= f.input :subject %>

  <%= f.button :submit, "Send Money Now", class: "btn btn-primary px-4" %>

<% end %>
